# Task 1

weather = "sunny"

if weather == "sunny":
    print("Wear sunglasses!")
else:
    print("Take an umbrella!")

# Task 2
# Ask the user how they feel
feeling = input("How do you feel today? ")
if feeling == "happy":
    print("That's great to hear!")
elif feeling == "sad":
    print("I hope your day gets better!")
